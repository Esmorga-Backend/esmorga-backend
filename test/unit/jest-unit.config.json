{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../..",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "<rootDir>/src/**"
  ],
  "coverageDirectory": "<rootDir>/coverage/unit",
  "testEnvironment": "node",
  "coveragePathIgnorePatterns": [
    "/main\\.ts$",
    "/index\\.ts$",
    "/src/domain/entities/.*\\.ts$"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/test/component"
  ],
  "coverageReporters": [
    "json",
    "lcov",
    "clover"
  ]
}