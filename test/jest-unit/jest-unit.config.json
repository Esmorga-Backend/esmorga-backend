{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../..",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "<rootDir>/src/**"
  ],
  "coverageDirectory": "<rootDir>/coverage/unit",
  "testEnvironment": "node",
  "coveragePathIgnorePatterns": [
    "/main\\.ts$",
    "/index\\.ts$",
    "/src/domain/entities/.*\\.ts$",
    "/src/infrastructure/services/.*\\.ts$",
    "/src/infrastructure/db/modules/.*",
    "/src/config/execute-migrations\\.ts"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/test/jest-component/"
  ],
  "coverageReporters": [
    "json",
    "lcov",
    "clover"
  ],
  "reporters": [
    "default",
    ["jest-junit", {
      "outputDirectory": "./report",
      "outputName": "junit-unit.xml",
      "suiteNameTemplate": "{filepath}",
      "classNameTemplate": "{classname}",
      "titleTemplate": "{title}"
    }]
  ]
}