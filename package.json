{
  "name": "esmorga-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npm run test:cov:unit && npm run test:cov:component && npm run test:merge-coverage && npm run test:report",
    "test:unit": "jest --config ./test/jest-unit/jest-unit.config.json --detectOpenHandles",
    "test:cov:unit": "jest --config ./test/jest-unit/jest-unit.config.json --coverage --detectOpenHandles",
    "test:component": "node test/scripts/features-update.js test/jest-component/features/ 2,4 5 && jest --config ./test/jest-component/jest-component.config.json --detectOpenHandles --forceExit",
    "test:cov:component": "node test/scripts/features-update.js test/jest-component/features/ 4 5 && jest --config ./test/jest-component/jest-component.config.json --coverage --detectOpenHandles  --forceExit",
    "test:merge-coverage": "istanbul-merge --out coverage/merged-output/merged-coverage.json coverage/unit/coverage-final.json coverage/component/coverage-final.json",
    "test:report": "nyc report -t coverage/merged-output --report-dir coverage --reporter=html --reporter=cobertura --reporter=lcov",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e-run-cypress": "node test/scripts/features-update.js test/cypress-e2e/cypress/e2e/features/ 4 3 && cypress run --config-file test/cypress-e2e/cypress.config.js --no-runner-ui --headless --browser chrome",
    "test:e2e-open-cypress": "node test/scripts/features-update.js test/cypress-e2e/cypress/e2e/features/ 2,4 3 &&cypress open --config-file test/cypress-e2e/cypress.config.js",
    "migrate:local-up": "cp migrations_local.json migrations.json && npx mongo-migrate-ts up",
    "migrate:local-down-all": "cp migrations_local.json migrations.json && npx mongo-migrate-ts down -a",
    "migrate:qa-up": "cp migrations_qa.json migrations.json && npx mongo-migrate-ts up",
    "migrate:qa-down-all": "cp migrations_qa.json migrations.json && npx mongo-migrate-ts down -a",
    "migrate:prod-up": "cp migrations_prod.json migrations.json && npx mongo-migrate-ts up",
    "migrate:prod-down-all": "cp migrations_prod.json migrations.json && npx mongo-migrate-ts down -a"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mongoose": "^10.0.6",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "mongoose": "^8.3.4",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "adm-zip": "^0.5.13",
    "axios": "^1.7.2",
    "cypress": "^13.9.0",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "istanbul-merge": "^2.0.0",
    "jest": "^29.5.0",
    "jest-cucumber": "^4.4.0",
    "jest-json-schema": "^6.1.0",
    "mongo-migrate-ts": "^1.4.0",
    "nyc": "^15.1.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "swagger-parser": "^10.0.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "nyc": {
    "report-dir": "./coverage/nyc",
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "json"
    ]
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "step_definitions": "cypress/e2e/features/"
  }
}
